import string

def contador(texto):
    texto = texto.lower()

    for pontuacao in string.punctuation:
        texto = texto.replace(pontuacao, "")
    
    palavras = texto.split()

    contagem = {}
    for palavra in palavras:
        contagem[palavra] = contagem.get(palavra, 0) + 1
    
    return contagem


texto_usuario = input("Digite o texto: ")
resultado = contador(texto_usuario)
print(resultado)
